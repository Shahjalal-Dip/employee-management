<!DOCTYPE html>
<html>
<head>
  <title>Employee List</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container mt-5">

  <h1>All Employees</h1>

  <% if (success_msg) { %>
    <div class="alert alert-success"><%= success_msg %></div>
  <% } %>

  <a href="/employees/new" class="btn btn-primary mb-3">Add New Employee</a>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Department</th>
        <th>Salary</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% employees.forEach(employee => { %>
        <tr>
          <td><%= employee.firstName %> <%= employee.lastName %></td>
          <td><%= employee.email %></td>
          <td><%= employee.department %></td>
          <td><%= employee.salary %></td>
          <td>
            <a href="/employees/edit/<%= employee._id %>" class="btn btn-sm btn-warning">Edit</a>
            <form action="/employees/delete/<%= employee._id %>" method="POST" style="display:inline;">
              <button class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>

</body>
</html>
